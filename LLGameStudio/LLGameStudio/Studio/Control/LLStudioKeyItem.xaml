<UserControl x:Class="LLGameStudio.Studio.Control.LLStudioKeyItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LLGameStudio.Studio.Control"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <Border x:Name="border" BorderThickness="1" CornerRadius="3" BorderBrush="#FF303B45" Background="#FF404E5C" Height="30">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*" MinWidth="30" MaxWidth="300"/>
                <ColumnDefinition Width="70*" MinWidth="30"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="textBlockKeyName" Grid.Column="0" VerticalAlignment="Center"/>
            <Canvas x:Name="canvas"></Canvas>
        </Grid>
    </Border>
</UserControl>
