<UserControl x:Class="LLGameStudio.Studio.Control.LLStudioActionItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LLGameStudio.Studio.Control"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <Border x:Name="border" BorderThickness="1" Padding="4" MouseEnter="border_MouseEnter" MouseLeave="border_MouseLeave" MouseLeftButtonDown="border_MouseLeftButtonDown">
            <TextBox x:Name="textBox" VerticalAlignment="Center" BorderBrush="{x:Null}" BorderThickness="0" Background="{x:Null}" HorizontalAlignment="Center" Foreground="#FFC8C8C8" Text="急急急" FontSize="20" KeyDown="textBox_KeyDown" LostFocus="textBox_LostFocus" MinHeight="50" VerticalContentAlignment="Center" />
        </Border>
    </Grid>
</UserControl>
