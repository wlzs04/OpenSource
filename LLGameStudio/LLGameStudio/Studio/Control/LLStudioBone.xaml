<UserControl x:Class="LLGameStudio.Studio.Control.LLStudioBone"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LLGameStudio.Studio.Control"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="20" RenderTransformOrigin="0.5,0.1">
    <Grid>
        <Polygon x:Name="polygonBone" Points="0,0 20,0 10 90" Fill="#FF686868" Margin="0,10,0,0" />
        <Ellipse x:Name="ellipseBoneJoint"  StrokeThickness="10" Stretch="Uniform" Margin="0" Height="20" VerticalAlignment="Top">
            <Ellipse.Stroke>
                <RadialGradientBrush>
                    <GradientStop Color="#CC191919" Offset="0.364"/>
                    <GradientStop Color="#FFD5D5DB" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Stroke>
        </Ellipse>
    </Grid>
</UserControl>
