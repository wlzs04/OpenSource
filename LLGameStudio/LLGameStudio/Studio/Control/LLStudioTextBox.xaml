<UserControl x:Class="LLGameStudio.Studio.Control.LLStudioTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LLGameStudio.Studio.Control"
             mc:Ignorable="d" MinWidth="60">
    <Grid>
        <Border x:Name="border"  BorderThickness="0" Background="#FF646464">
            <TextBox x:Name="textBox" Margin="0" FontSize="14.667" Background="{x:Null}" Foreground="#FFF0F0F0" BorderBrush="{x:Null}"
                 BorderThickness="0" PreviewKeyDown="PreviewKeyDown_SetValue" Text="0" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
