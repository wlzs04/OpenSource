<UserControl x:Class="LLGameStudio.Studio.Control.LLStudioPropertyListBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LLGameStudio.Studio.Control"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer Margin="0" VerticalScrollBarVisibility="Auto">
            <ListBox Background="#FF191919" BorderThickness="0,0,3,0" BorderBrush="{x:Null}" HorizontalContentAlignment="Stretch">
                <Expander Header="变换">
                    <Grid x:Name="gridTransform"/>
                </Expander>
                <Expander Header="通用">
                    <Grid x:Name="gridCommon"/>
                </Expander>
                <Expander Header="其他">
                    <Grid x:Name="gridOther"/>
                </Expander>
            </ListBox>
        </ScrollViewer>
    </Grid>
</UserControl>
