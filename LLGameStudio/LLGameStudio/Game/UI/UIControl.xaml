<UserControl x:Class="LLGameStudio.Game.UI.UIControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LLGameStudio.Game.UI"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid>
        <Grid x:Name="grid" MouseEnter="border_MouseEnter" MouseLeave="border_MouseLeave" MouseLeftButtonDown="border_MouseLeftButtonDown" MouseLeftButtonUp="border_MouseLeftButtonUp">
            <Grid x:Name="gridContent"/>
        </Grid>
        <Border x:Name="border" BorderThickness="1"/>
    </Grid>
</UserControl>
