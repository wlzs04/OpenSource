<UserControl x:Class="LLGameStudio.FileItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LLGameStudio"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="60" Focusable="True">
    <Grid>
        <Border x:Name="border" BorderThickness="1" Padding="4" MouseEnter="border_MouseEnter" MouseLeave="border_MouseLeave" MouseLeftButtonDown="border_MouseLeftButtonDown">
            <Grid>
                <Grid Width="50" Height="50" VerticalAlignment="Top" >
                    <Image x:Name="image" VerticalAlignment="Center"/>
                </Grid>
                <TextBox x:Name="textBox" VerticalAlignment="Top" Margin="0,50,0,0" BorderBrush="{x:Null}" BorderThickness="0" Background="{x:Null}" HorizontalAlignment="Center" Foreground="#FFC8C8C8" Text="急急急" FontSize="9.333" MaxWidth="50" KeyDown="textBox_KeyDown" LostFocus="textBox_LostFocus">
                    <TextBox.ContextMenu>
                        <ContextMenu Visibility="Collapsed"/>
                    </TextBox.ContextMenu>
                </TextBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>
