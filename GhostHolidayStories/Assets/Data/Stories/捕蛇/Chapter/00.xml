<Chapter name="第一章" description="半掩家门初入林，林深天开似无垠">
	<Section index="0" sceneName="青州" description="户部尚书的两个儿子第一次到青州。">
    <Action/>
    <Game gameState="Controlled"/>
    <Enter>
      <Dynamic name="test" image="person2.png" width="100" height="200" position="0,0" layer="1" isBlock="true"/>
    </Enter>
    <Move actor="test" position="400,400" moveState="Set"/>
    <Camera followActor="test" isAsync="false" needTime="0" moveState="Set"/>
    <Animation actor="test" isAsync="true" loopTime="4" onceTime="0.5" row="1" column="4" image="person1.png" />
    <Move actor="test" isAsync="false" needTime="2" position="500,500" moveState="AI"/>
    <Starring actor="test"/>
    <Game gameState="Free"/>
    <Cut/>
	</Section>
	<Section index="1" sceneName="青州" description="青州知府派人接待。">
    <Action/>
    <Game gameState="Controlled"/>
    <Animation actor="test" isAsync="true" loopTime="1" onceTime="0.5" row="1" column="4" image="person1.png" />
    <Move actor="test" position="400,200" needTime="0.5" moveState="AI"/>
    <Move actor="test" position="500,200" needTime="0.5" moveState="AI"/>
    <Talk actor="test" content="请问这里是青州吗？"/>
    <Talk actor="守卫1" content="是，不过你不能进去！"/>
    <Talk actor="test" content="为什么？"/>
    <Talk actor="守卫1" content="进门需要交100文，你有就放你进去？"/>
    <Question actor="守卫1" showContent="false" isLoop="false">
      <Option content="交钱进入。">
        <Condition expression="(GetObjectNumberById(10001)>=100)">
          <True>
            <RemoveObject>
              <ObjectItem itemId="10001" number="100"/>
            </RemoveObject>
            <Talk actor="守卫1" content="嗯！进去吧！"/>
          </True>
          <False>
            <Talk actor="守卫1" content="钱不够，不能进！"/>
          </False>
        </Condition>
      </Option>
      <Option content="不交。">
        <Talk actor="test" content="没有进城门需要交钱的道理。"/>
        <Talk actor="守卫1" content="那就在城外站着吧！"/>
      </Option>
    </Question>
    <Game gameState="Free"/>
    <Cut/>
	</Section>
</Chapter>